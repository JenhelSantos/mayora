doctype html
html
	head
		meta(charset='utf-8')
		link(rel='icon', type='image/png', href='/logo/logo-black.png')
		link(rel='apple-touch-icon', sizes='76x76', href='/logo/logo-black.png')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		title Tenant - Invoice
		meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
		meta(name='viewport', content='width=device-width')
		link(href='/paper/css/bootstrap.min.css', rel='stylesheet')
		link(href='/paper/css/paper-kitf066.css?v=2.1.0', rel='stylesheet')
		link(href='/paper/css/demo.css', rel='stylesheet')
		link(href='/paper/css/mayoraTheme.css', rel='stylesheet')
		// Fonts and icons
		link(href='/paper/fonts/montserrat.css?family=Montserrat:400,300,700', rel='stylesheet', type='text/css')
		link(href='/paper/font-awesome-4.7.0/css/font-awesome.min.css', rel='stylesheet')
		link(href='/paper/css/nucleo/nucleo-icons.css', rel='stylesheet')
		link(href='/paper/css/nucleo/nucleo.css', rel='stylesheet')
	body
		.content-page
			// Start content
			.content
				.container-fluid
						.col-md-10
							.card-box
								//
									<div class="panel-heading">
									<h4>Invoice</h4>
									</div>
								.panel-body
									.clearfix
										.pull-left
											img(src='/logo/logo-black.png' style='width:100px;height:100px;')
										.pull-right
											h4
												| Invoice # 
												br
												strong #{invoiceDetail.strInvoiceID}
									hr
									.row
										.col-md-12
											.pull-left.m-t-30
												p
													strong Landlord ID: 
													|  #{invoiceDetail.strLandlordID}
												p
													strong Landlord Name: 
													|  #{invoiceDetail.strFirstName} #{invoiceDetail.strMiddleName} #{invoiceDetail.strLastName}
												p
													strong Contact Number: 
													|  #{invoiceDetail.strContactNumber}
											.pull-right.m-t-30
												p
													strong Tenant ID: 
													|  #{user.strTenantId}
												p
													strong Tenant Name: 
													|  #{user.strFirstName} #{user.strMiddleName} #{user.strLastName}
												p
													strong Contact Number:
													|  #{user.strContactNo}
									br
									br
									br
									.m-h-50
									.row
										.col-md-12
											.table-responsive
												table.table.m-t-30
													thead
														tr
															th Room ID
															th Down Payment Rule
															th Monthly Rent
													tbody
														tr
															td #{invoiceDetail.intRoomID}
															td #{invoiceDetail.strDownPaymentRule}
															td PhP #{invoiceDetail.dblMonthlyFee}
									.row
										.col-xl-10.col-10
											.clearfix.m-t-40
												h5.small.text-inverse.font-600 Instructions
												small
													| Please proceed to the apartment located at #{invoiceDetail.strLocation} for the payment and Contract Signing
									hr
									.d-print-none
										.pull-right
											a.btn.btn-inverse.waves-effect.waves-light(href='javascript:window.print()')
												i.fa.fa-print
												span Print
										.clearfix
		// Core JS Files
		script(src='/paper/js/jquery.min.js', type='text/javascript')
		script(src='/paper/js/jquery-ui-1.12.1.custom.min.js', type='text/javascript')
		script(src='/paper/js/popper.js', type='text/javascript')
		script(src='/paper/js/bootstrap.min.js', type='text/javascript')