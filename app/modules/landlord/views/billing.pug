		script(type='text/javascript').
			$(document).ready(function(){
				$('.notifAlert').click(function(){
					$.post('/landlord/determineNotif', {id: $(this).attr('value')})
					.done(data =>{
						if(data.tenantID){
							swal({
								title: "Accept Request?",
								text: "This will notify Tenant and will provide him an invoice to be paid",
								icon: "warning",
								buttons: true,
								dangerMode: true,
							})
							.then((accepted) => {
								if (accepted) {
									$.post('/landlord/notifytenant', {tenantId: data.tenantID, notifId: data.notifID, reqCode: data.reqCode})
									.done(data =>{
										swal("Tenant is now notified", {
											icon: "success",
											title: "Accepted!"
										});
										$('#redirect').attr('action', `${data.url}`)
										$('#redirect').submit();
									})
								}
							});
						}
						else if(data.url){
							$('#redirect').attr('action', `${data.url}`)
							$('#redirect').submit();
						}
					})
				});
				$('#compute').click(function(){
					var loop = $(this).val();
					var kwHUsed = [];
					var cubicMeterUsed = [];
					var totalKwH = 0;
					var totalCubicMeter = 0;
					var roomID = [];
					var mFee = [];
					console.log(loop)
					for(var x=0;x<loop;x++){
						var kwH = eval($('#currE'+x).val() +'-'+$('#prevE'+x).val());
						console.log('kwH = '+kwH)
						kwHUsed[x] = kwH 
						totalKwH = eval(totalKwH+'+'+kwH);
						console.log('totalNowKWH = '+totalKwH)
						var cubicMeter = eval($('#currW'+x).val() +'-'+$('#prevW'+x).val());
						cubicMeterUsed.push(cubicMeter);
						totalCubicMeter = eval(totalCubicMeter+'+'+cubicMeter);
						roomID[x] = $('#prevE'+x).attr('roomID');
						mFee[x] = $('#prevE'+x).attr('mFee');
					}
					console.log('totalNowKWH = '+totalKwH)
					var perkWH = eval($('#eBill').val()+'/'+totalKwH);
					var perCubicMeter = eval($('#wBill').val()+'/'+totalCubicMeter);
					console.log(perkWH);
					console.log(perCubicMeter);
					var electricPrice = [];
					var waterPrice = [];

					for(var y=0;y<loop;y++){
						electricPrice[y] = (kwHUsed[y] * perkWH).toFixed(2);
						waterPrice[y] = (cubicMeterUsed[y] * perCubicMeter).toFixed(2);
						console.log('Water'+waterPrice[y]);
						console.log('Electric'+electricPrice[y]);
					}
					$('#sumEBill').val($('#eBill').val());
					$('#sumWBill').val($('#wBill').val());

					for(var z=0;z<loop;z++){
						var huli = eval(electricPrice[z]+'+'+waterPrice[z]+'+'+mFee[z]);
						$('#tableBody').append(`<tr>
							<td>${roomID[z]}</td>
							<td>${kwHUsed[z]} KwH</td>
							<td>${cubicMeterUsed[z]} cubic meters</td>
							<td>PhP ${electricPrice[z]}</td>
							<td>PhP ${waterPrice[z]}</td>
							<td>PhP ${mFee[z]}</td>
							<td>PhP ${huli}</td>
							</tr>`);
						$('#billModal').modal('show');
					}
				});
			});
