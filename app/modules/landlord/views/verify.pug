doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		link(rel='icon', type='image/png', href='/logo/logo-black.png')
		link(rel='apple-touch-icon', sizes='76x76', href='/logo/logo-black.png')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		title Verify Your Account
		meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
		meta(name='viewport', content='width=device-width')
		link(href='/paper/css/bootstrap.min.css', rel='stylesheet')
		link(href='/paper/css/paper-kitf066.css?v=2.1.0', rel='stylesheet')
		link(href='/paper/css/demo.css', rel='stylesheet')
		link(href='/paper/css/mayoraTheme.css', rel='stylesheet')
		// Fonts and icons
		link(href='http://fonts.googleapis.com/css?family=Montserrat:400,300,700', rel='stylesheet', type='text/css')
		link(href='/paper/font-awesome-4.7.0/css/font-awesome.min.css', rel='stylesheet')
		link(href='/paper/css/nucleo/nucleo-icons.css', rel='stylesheet')
		link(href='/paper/css/nucleo/nucleo.css', rel='stylesheet')
		link(href='/paperWizard/css/dropify.css', rel='stylesheet')
	body.full-screen.login
		- var hasSuccess = typeof reqQuery.success !== 'undefined' ? 'Successfully Uploaded!': '';
		.wrapper
			.page-header(style="background-image: url('/paper/img/sections/bruno-abatti.jpg');")
				.filter
				.container
					.row
						.col-md-6.ml-auto.mr-auto
							.card.card-register(style='width:100%')
								h3.card-title Upload your Deposit Slip Here
								if hasSuccess
									h4(style='color:white') #{hasSuccess}
								form.register-form(method='POST' action='/landlord/uploadslip' enctype="multipart/form-data")
									label(style='font-weight: bold;') Deposit Slip
										small(style='color:white;font-size:15px') *
									input.dropify(type='file', data-height='100' name='depositSlip' required)
									center
										button.btn.btn-round.btn-link(type='submit' style='color:white') Submit
								.forgot
									a.btn.btn-link.btn-danger(href='/logout') Logout
						.col-md-6
							h2.title You're Not Verified!
							- if(user.booPlan === 1)
								h4.subtitle Please Deposit PhP 10,000 on account 02 656 7356 to proceed to your Management System
							- if(user.booPlan === 2)
								h4.subtitle Please Deposit PhP 15,000 on account 02 656 7356 to proceed to your Management System
					.demo-footer.text-center
						h6
							| Â© 
							script.
								document.write(new Date().getFullYear())
							| , made with 
							i.fa.fa-heart.heart
							|  by Mayora Team
		// Core JS Files
		script(src='/paper/js/jquery.min.js', type='text/javascript')
		script(src='/paper/js/jquery-ui-1.12.1.custom.min.js', type='text/javascript')
		script(src='/paper/js/popper.js', type='text/javascript')
		script(src='/paper/js/bootstrap.min.js', type='text/javascript')
		// Control Center for Paper Kit: parallax effects, scripts for the example pages etc
		script(src='/paper/js/paper-kitf066.js?v=2.1.0')
		//File Upload
		script(src='/paperWizard/js/dropify.js')
		script.
			$('.dropify').dropify({
				messages: {
					'default': 'Drag and drop a file here or click',
					'replace': 'Drag and drop or click to replace',
					'remove': 'Remove',
					'error': 'Ooops, something wrong appended.'
				},
				error: {
					'fileSize': 'The file size is too big (1M max).'
				}
			});