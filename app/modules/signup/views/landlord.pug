doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		link(rel='icon', type='image/png', href='/logo/logo-black.png')
		link(rel='apple-touch-icon', sizes='76x76', href='/logo/logo-black.png')
		title Signup - Landlord
		meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
		meta(name='viewport', content='width=device-width')
		// CSS Files
		link(href='/paperWizard/css/bootstrap.min.css', rel='stylesheet')
		link(href='/paperWizard/css/paper-bootstrap-wizard.css', rel='stylesheet')
		link(href='/paper/css/mayoraTheme.css', rel='stylesheet')
		// CSS Just for demo purpose, don't include it in your project
		link(href='/paperWizard/css/demo.css', rel='stylesheet')
		// Fonts and Icons
		link(href='/paper/font-awesome-4.7.0/css/font-awesome.min.css', rel='stylesheet')
		link(href='https://fonts.googleapis.com/css?family=Muli:400,300', rel='stylesheet', type='text/css')
		link(href='/paperWizard/css/themify-icons.css', rel='stylesheet')
		link(href='/paperWizard/css/dropify.css', rel='stylesheet')
	body
		//MAIN CONTENT
		.image-container.set-full-height(style="background-image: url('/paperWizard/img/paper-1.jpeg')")
			// Creative Tim Branding
			a(href='/index')
				.logo-container
					.logo
						img(src='/logo/logo-white.png' style='width:60px;height:60px')
			// Big container
			.container
				.row
					.col-sm-8.col-sm-offset-2
						// Wizard container
						.wizard-container
							#wizardProfile.card.wizard-card(data-color='mayora')
								form(action='/signup/landlord' method='post' enctype="multipart/form-data")
									input#planMo(type='hidden' name='plan' value='')
									input(type='hidden' name='landlordId' value=`${bilang.BILANG}`)
									// You can switch " data-color="orange" "  with one of the next bright colors: "blue", "green", "orange", "red", "azure"
									.wizard-header.text-center
										h3.wizard-title Register as Landlord
										p.category This information will let us know more about you.
									.wizard-navigation
										.progress-with-circle
											.progress-bar(role='progressbar', aria-valuenow='1', aria-valuemin='1', aria-valuemax='4', style='width: 21%;')
										ul
											li
												a(href='#info', data-toggle='tab')
													.icon-circle
														i.ti-user
													| Personal Info
											li
												a(href='#account', data-toggle='tab')
													.icon-circle
														i.ti-id-badge
													| Account Info
											li
												a(href='#credentials', data-toggle='tab')
													.icon-circle
														i.ti-files
													| Credentials
											li
												a(href='#contract', data-toggle='tab')
													.icon-circle
														i.ti-clipboard
													| Contract
											li
												a(href='#plan', data-toggle='tab')
													.icon-circle
														i.ti-money
													| Subscription Plan
									.tab-content
										#info.tab-pane
											.row
												h5.info-text  Please tell us more about yourself.
												.col-sm-6.col-sm-offset-1
													.form-group
														label
															| First Name 
															small(style='color:red') *
														input.form-control(name='firstName', type='text', placeholder='Enter your First Name' required)
													.form-group
														label
															| Middle Name 
														input.form-control(name='middleName', type='text', placeholder='Enter your Middle Name')
													.form-group
														label
															| Last Name 
															small(style='color:red') *
														input.form-control(name='lastName', type='text', placeholder='Enter your Last Name' required)
												.col-sm-10.col-sm-offset-1
													.form-group
														label
															| Address
															small(style='color:red') *
														input.form-control(name='address', type='text', placeholder='Enter your Address' required)
													.form-group
														.row
															.col-md-6
																label Email Address
																	small(style='color:red') *
																input.form-control(type='email' name='emailAddress' placeholder='Enter your Email Address' required)
															.col-md-6
																label Contact Number
																	small(style='color:red') *
																input.form-control(type='text' name='contactNumber' placeholder='Enter your Contact Number' required)
										#account.tab-pane
											.row
												h5.info-text Choose your Username and Password
												.col-sm-6.col-sm-offset-1
													.form-group
														label Username
															small(style='color:red') *
														input.form-control(type='text' name='username' placeholder='Enter your username')
													.form-group
														label Username
															small(style='color:red') *
														input.form-control(type='password' name='password' placeholder='Enter your password')
										#credentials.tab-pane
											h5.info-text  Please provide all the credentials needed to verify your identity 
											.row
												.col-sm-12
													.form-group
														label(style='font-weight: bold;') Valid ID
															small(style='color:red') *
														input.dropify(type='file', data-height='100' name='validIdLandlord' accept='image/*' required)
													.form-group
														label(style='font-weight: bold;') BIR Permit (Scanned)
															small(style='color:red') *
														input.dropify(type='file', data-height='100' name='birPermit' accept='image/*' required)
													.form-group
														label(style='font-weight: bold;') Land Title (Scanned)
															small(style='color:red') *
														input.dropify(type='file', data-height='100' name='landTitle' accept='image/*' required)
										#contract.tab-pane
											.row
												.col-sm-12
													h5.info-text  Contract Business Rules
												.col-sm-5.col-sm-offset-1
													.form-group
														label Penalty
															small (Percentage of Penalty if Paid over Due Date)
															small(style='color:red') *
														input.form-control(type='number', placeholder='Penalty Percentage' min='1' max='10' name='penalty' required)
												.col-sm-5
													.form-group
														label Minimun Rental Duration
															small (in months)
															small(style='color:red') *
														input.form-control(type='number' placeholder='Minimum Duration in months' min='6' max='24' name='minimumDuration' required)
										#plan.tab-pane
											h5.info-text Choose your Plan
											.row
												.col-sm-12.col-sm-offset-1
													.col-sm-5
														.choice#choice1(data-toggle='wizard-radio')
															input#plan1(type='radio', name='plan', value='1')
															.card.card-checkboxes.card-hover-effect
																i.ti-receipt
																h4 PhP 10,000
																p 6 months Subscription
													.col-sm-5
														.choice#choice2(data-toggle='wizard-radio')
															input#plan2(type='radio', name='plan', value='2')
															.card.card-checkboxes.card-hover-effect
																i.ti-receipt
																h4 PhP 15,000
																p 12 months Subscription
									.wizard-footer
										.pull-right
											input.btn.btn-next.btn-mayora.btn-wd(type='button', name='next', value='Next')
											input.btn.btn-finish.btn-mayora.btn-wd(type='submit')
										.pull-left
											input.btn.btn-previous.btn-default.btn-wd(type='button', name='previous', value='Previous')
										.clearfix
						// wizard container
				// end row
			// big container
		//END MAIN CONTENT
		// Core JS Files
		script(src='/paperWizard/js/jquery-2.2.4.min.js', type='text/javascript')
		script(src='/paperWizard/js/bootstrap.min.js', type='text/javascript')
		script(src='/paperWizard/js/jquery.bootstrap.wizard.js', type='text/javascript')
		// Plugin for the Wizard
		script(src='/paperWizard/js/paper-bootstrap-wizard.js', type='text/javascript')
		// More information about jquery.validate here: http://jqueryvalidation.org/
		script(src='/paperWizard/js/jquery.validate.min.js', type='text/javascript')
		//File Upload
		script(src='/paperWizard/js/dropify.js')
		script.
			$('.dropify').dropify({
				messages: {
					'default': 'Drag and drop a file here or click',
					'replace': 'Drag and drop or click to replace',
					'remove': 'Remove',
					'error': 'Ooops, something wrong appended.'
				},
				error: {
					'fileSize': 'The file size is too big (1M max).'
				}
			});
		script.
			$(document).ready(function(){
				$('#choice1').click(function(){
					//alert('hello1');
					$('#planMo').val(1);
				});
				$('#choice2').click(function(){
					//alert('hello2');
					$('#planMo').val(2);
				});
			});