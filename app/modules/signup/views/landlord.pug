doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		link(rel='apple-touch-icon', sizes='76x76', href='/paperWizard/img/apple-icon.png')
		link(rel='icon', type='image/png', href='/paperWizard/img/favicon.png')
		title Signup - Landlord
		meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
		meta(name='viewport', content='width=device-width')
		// CSS Files
		link(href='/paperWizard/css/bootstrap.min.css', rel='stylesheet')
		link(href='/paperWizard/css/paper-bootstrap-wizard.css', rel='stylesheet')
		link(href='/paper/css/mayoraTheme.css', rel='stylesheet')
		// CSS Just for demo purpose, don't include it in your project
		link(href='/paperWizard/css/demo.css', rel='stylesheet')
		// Fonts and Icons
		link(href='http://netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css', rel='stylesheet')
		link(href='https://fonts.googleapis.com/css?family=Muli:400,300', rel='stylesheet', type='text/css')
		link(href='/paperWizard/css/themify-icons.css', rel='stylesheet')
	body
		//MAIN CONTENT
		.image-container.set-full-height(style="background-image: url('/paperWizard/img/paper-1.jpeg')")
			// Creative Tim Branding
			a(href='/index')
				.logo-container
					.logo
						img(src='/paperWizard/img/new_logo.png')
			// Big container
			.container
				.row
					.col-sm-8.col-sm-offset-2
						// Wizard container
						.wizard-container
							#wizardProfile.card.wizard-card(data-color='mayora')
								form(action='', method='')
									// You can switch " data-color="orange" "  with one of the next bright colors: "blue", "green", "orange", "red", "azure"
									.wizard-header.text-center
										h3.wizard-title Create your profile
										p.category This information will let us know more about you.
									.wizard-navigation
										.progress-with-circle
											.progress-bar(role='progressbar', aria-valuenow='1', aria-valuemin='1', aria-valuemax='3', style='width: 21%;')
										ul
											li
												a(href='#about', data-toggle='tab')
													.icon-circle
														i.ti-user
													| 												About
											li
												a(href='#account', data-toggle='tab')
													.icon-circle
														i.ti-settings
													| 												Work
											li
												a(href='#address', data-toggle='tab')
													.icon-circle
														i.ti-map
													| 												Address
									.tab-content
										#about.tab-pane
											.row
												h5.info-text  Please tell us more about yourself.
												.col-sm-6.col-sm-offset-1
													.form-group
														label
															| First Name 
															small(style='color:red') *
														input.form-control(name='firstname', type='text', placeholder='Andrew...')
													.form-group
														label
															| Last Name 
															small(style='color:red') *
														input.form-control(name='lastname', type='text', placeholder='Smith...')
												.col-sm-10.col-sm-offset-1
													.form-group
														label
															| Email 
															small(style='color:red') *
														input.form-control(name='email', type='email', placeholder='andrew@creative-tim.com')
										#account.tab-pane
											h5.info-text  What are you doing? (checkboxes) 
											.row
												.col-sm-8.col-sm-offset-2
													.col-sm-4
														.choice(data-toggle='wizard-checkbox')
															input(type='checkbox', name='jobb', value='Design')
															.card.card-checkboxes.card-hover-effect
																i.ti-paint-roller
																p Design
													.col-sm-4
														.choice(data-toggle='wizard-checkbox')
															input(type='checkbox', name='jobb', value='Code')
															.card.card-checkboxes.card-hover-effect
																i.ti-pencil-alt
																p Code
													.col-sm-4
														.choice(data-toggle='wizard-checkbox')
															input(type='checkbox', name='jobb', value='Develop')
															.card.card-checkboxes.card-hover-effect
																i.ti-star
																p Develop
										#address.tab-pane
											.row
												.col-sm-12
													h5.info-text  Are you living in a nice area? 
												.col-sm-7.col-sm-offset-1
													.form-group
														label Street Name
														input.form-control(type='text', placeholder='5h Avenue')
												.col-sm-3
													.form-group
														label Street Number
														input.form-control(type='text', placeholder='242')
												.col-sm-5.col-sm-offset-1
													.form-group
														label City
														input.form-control(type='text', placeholder='New York...')
												.col-sm-5
													.form-group
														label Country
														br
														select.form-control(name='country')
															option(value='Afghanistan')  Afghanistan 
															option(value='Albania')  Albania 
															option(value='Algeria')  Algeria 
															option(value='American Samoa')  American Samoa 
															option(value='Andorra')  Andorra 
															option(value='Angola')  Angola 
															option(value='Anguilla')  Anguilla 
															option(value='Antarctica')  Antarctica 
															option(value='...') ...
									.wizard-footer
										.pull-right
											input.btn.btn-next.btn-mayora.btn-wd(type='button', name='next', value='Next')
											input.btn.btn-finish.btn-mayora.btn-wd(type='button', name='finish', value='Finish')
										.pull-left
											input.btn.btn-previous.btn-default.btn-wd(type='button', name='previous', value='Previous')
										.clearfix
						// wizard container
				// end row
			// big container
		//END MAIN CONTENT
	// Core JS Files
	script(src='/paperWizard/js/jquery-2.2.4.min.js', type='text/javascript')
	script(src='/paperWizard/js/bootstrap.min.js', type='text/javascript')
	script(src='/paperWizard/js/jquery.bootstrap.wizard.js', type='text/javascript')
	// Plugin for the Wizard
	script(src='/paperWizard/js/paper-bootstrap-wizard.js', type='text/javascript')
	// More information about jquery.validate here: http://jqueryvalidation.org/
	script(src='/paperWizard/js/jquery.validate.min.js', type='text/javascript')